{
    "manifest_version": 3,
    "name": "Smart Meeting Scheduler",
    "version": "0.0.2",
    "description": "An extension to automatically schedule meetings using Google Calendar",
    "permissions": ["identity"],
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "browser_action": {
        "default_title": "Smart Meeting Scheduler"
    },
    "web_accessible_resources": [
        {
            "resources": ["img/*"],
            "matches": ["<all_urls>"]
        },
        "output.css",
        "script.js"
    ],

    "content_security_policy": {
        "extension_pages": "default-src 'self'",
        "sandbox": "..."
    }
}
